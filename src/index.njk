---
layout: layouts/base.njk
title: Departures
---
<!-- Departures Hall -->
<header class="departures-header">
  <h1 class="departures-title">Departures</h1>
  <p class="departures-subtitle">All scheduled flights</p>
</header>

<!-- Board Header -->
<div class="board-header" role="row">
  <span class="board-header-cell">Flight</span>
  <span class="board-header-cell">Destination</span>
  <span class="board-header-cell">Date</span>
  <span class="board-header-cell">Status</span>
</div>

<!-- Flight Rows -->
<div class="flights-container" role="list">
  {% for post in collections.posts %}
  <article class="flight-row" role="listitem">
    <!-- Flight Code -->
    <div class="flight-code">
      AA-{{ loop.index | padStart(3, '0') }}
    </div>

    <!-- Destination (Title + Excerpt) -->
    <div class="flight-destination">
      <h2 class="flight-title">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </h2>
      {% if post.data.excerpt %}
      <p class="flight-excerpt">{{ post.data.excerpt }}</p>
      {% endif %}
    </div>

    <!-- Departure Time -->
    <time class="flight-time" datetime="{{ post.date | dateFormat }}">
      {{ post.date | shortDate }}
    </time>

    <!-- Status -->
    <div class="flight-status">
      <span class="flight-duration">{{ post.templateContent | readingTime }}</span>
      {% if post.data.tags %}
      <div class="flight-tags">
        {% for tag in post.data.tags %}
          {% if tag !== "posts" %}
          <span class="flight-tag">{{ tag }}</span>
          {% endif %}
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </article>
  {% else %}
  <div class="no-flights">
    <p>No scheduled departures.</p>
  </div>
  {% endfor %}
</div>
