<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or site.title }}</title>
  <meta name="description" content="{{ description or site.description }}">

  <!-- Preconnect to CDN -->
  <link rel="preconnect" href="https://cdnjs.cloudflare.com">

  <!-- Fonts - System Helvetica stack -->
  <style>
    @font-face {
      font-family: 'Swiss';
      src: local('Helvetica Neue'), local('Helvetica'), local('Arial');
      font-weight: 100 900;
      font-display: swap;
    }
  </style>

  <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body class="{% if isPostPage %}is-post-page{% endif %}">

  <!-- Dynamic Island Navigation -->
  <nav class="dynamic-island" role="navigation" aria-label="Main navigation">
    <div class="island-content">
      <!-- Back button (visible on post pages) -->
      <a href="/" class="island-back" aria-label="Back to home">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
      </a>

      <!-- Context-aware title -->
      <span class="island-title">{{ islandTitle or site.author.name }}</span>

      <!-- Actions -->
      <div class="island-actions">
        <button class="island-btn theme-toggle" aria-label="Toggle dark mode" title="Toggle theme">
          <svg class="icon-sun" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="5"/>
            <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/>
          </svg>
          <svg class="icon-moon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Reading progress (visible on post pages) -->
    <div class="island-progress">
      <div class="island-progress-bar"></div>
    </div>
  </nav>

  <!-- Page Transition Overlay -->
  <div class="page-transition" aria-hidden="true"></div>

  <!-- Main Content -->
  <main class="page" id="main">
    {{ content | safe }}
  </main>

  <!-- GSAP CDN -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" defer></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js" defer></script>

  <!-- Main Script -->
  <script type="module" src="/assets/js/main.js"></script>
</body>
</html>
