---
layout: layouts/base.njk
---
<!-- Sticky Post Header (appears on scroll) -->
<div class="post-sticky-header" aria-hidden="true">
  <div class="post-sticky-inner">
    <a href="/" class="post-sticky-back">&larr;</a>
    <span class="post-sticky-title">{{ title }}</span>
  </div>
  <div class="reading-progress"></div>
</div>

<article class="post-full">
  <header class="post-full-header" id="post-header">
    <a href="/" class="back-link">&larr; Back</a>
    {% if lead %}
    <p class="post-lead">{{ lead }}</p>
    {% endif %}
    <h1 class="post-full-title">{{ title }}</h1>
    <div class="reading-time-prominent">{{ content | readingTime }}</div>
  </header>

  {% if intro %}
  <p class="post-intro">{{ intro | safe }}</p>
  {% endif %}

  <div class="post-full-content prose">
    {{ content | safe }}
  </div>
</article>
