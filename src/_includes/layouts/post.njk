---
layout: layouts/base.njk
isPostPage: true
islandTitle: ""
---

<article class="post-page">
  <!-- Post Hero -->
  <header class="post-hero">
    <div class="post-hero-container">
      <div class="post-meta animate-fade-up">
        <time datetime="{{ date | dateFormat }}">{{ date | dateFormat }}</time>
        <span class="sep">/</span>
        <span>{{ content | readingTime }}</span>
        {% if tags %}
        <span class="sep">/</span>
        {% for tag in tags %}
          {% if tag !== "posts" %}
          <span>{{ tag }}</span>{% if not loop.last %}, {% endif %}
          {% endif %}
        {% endfor %}
        {% endif %}
      </div>

      <h1 class="post-title">
        {% set words = title | split(" ") %}
        {% for word in words %}
        <span class="post-title-line animate-split-line"><span>{{ word }}</span></span>
        {% endfor %}
      </h1>
    </div>
  </header>

  <!-- Post Content -->
  <div class="post-content">
    <div class="post-content-inner">
      <div class="prose animate-fade-up">
        {{ content | safe }}
      </div>

      {% if tags %}
      <div class="post-tags-inline animate-fade-up">
        {% for tag in tags %}
          {% if tag !== "posts" %}
          <span class="tag">{{ tag }}</span>
          {% endif %}
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </div>

  <!-- Post Navigation -->
  <nav class="post-nav">
    <a href="/" class="post-nav-link animate-fade-up">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      <span>Back to all writing</span>
    </a>
  </nav>
</article>
